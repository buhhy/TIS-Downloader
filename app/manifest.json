{
  "name": "TIS Manual Downloader App",
  "description": "Downloads the fetched TIS manuals to disk.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },
